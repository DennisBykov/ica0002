{% if inventory_hostname == influxdb_host %}
08 19 * * *  rm -rf /home/backup/influxdb/*; influxd backup -portable -database telegraf /home/backup/influxdb
10 19 * * 0  backup  duplicity --no-encryption full /home/backup/influxdb/ rsync://{{ github_username }}@backup.{{ domain_name }}//home/{{ github_username }}/influxdb
10 19 * * 1-6  backup  duplicity --no-encryption incremental /home/backup/influxdb/ rsync://{{ github_username }}@backup.{{ domain_name }}//home/{{ github_username }}/influxdb
05 22 28 * *  backup duplicity remove-older-than 1M rsync rsync://{{ github_username }}@backup.{{ domain_name }}//home/{{ github_username }}/influxdb
{% endif %}